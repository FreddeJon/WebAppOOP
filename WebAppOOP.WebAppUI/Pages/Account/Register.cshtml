@page
@model WebAppOOP.WebAppUI.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
@if (Model.Message != null)
{
    <div class="alert alert-warning">@Model.Message</div>
}
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Register</h5>
                    <form class="form-signin" method="post">
                        <div class="form-label-group"> <input type="text" asp-for="Email" class="form-control" placeholder="Email" autofocus><span class="text-danger" asp-validation-for="Email"></span></div>
                        <br />
                        <div class="form-label-group"> <input type="password" asp-for="Password" class="form-control" placeholder="Password"><span class="text-danger" asp-validation-for="Password"></span></div>
                        <br />
                        <div class="form-label-group"> <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password"><span class="text-danger" asp-validation-for="ConfirmPassword"></span></div>
                        <br />
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" asp-page-handler="Register">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>